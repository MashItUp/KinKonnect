<div id="header">
    <h2>Create or Join a Family</h2>
</div>


<!-- Main Content -->
<div class="maincontent">
    <div class="col-sm-6 col-sm-offset-3">

        <h1><span class="fa fa-sign-in"></span> Create Family</h1>


        <!-- CREATE FAMILY FORM -->
        <form action="/api/family/create" method="post">
            <div class="form-group">
                <label>Family Name</label>
                <input type="text" class="form-control" name="famname">
            </div>
            <div class="form-group">
                <label>Secret Key</label>
                <input type="text" class="form-control" name="secretKey">
            </div>
            <div class="form-group">
                <input type="hidden" name="personId" value={{user.id}}>
            </div>
            <button type="submit" class="btn btn-warning btn-lg">Create Family</button>
        </form>

        <hr>

    </div>

    <div class="col-sm-6 col-sm-offset-3">

        <h1><span class="fa fa-sign-in"></span> Join A Family</h1>


        <!-- CREATE JOIN FORM -->
        <form action="/api/family/join" method="post">
            <div class="form-group">
                <label>Family Name</label>
                <input type="text" class="form-control" name="famname">
            </div>
            <div class="form-group">
                <label>Secret Key</label>
                <input type="text" class="form-control" name="secretKey">
            </div>
            <div class="form-group">
                <input type="hidden" name="personId" value={{user.id}}>
            </div>
            <button type="submit" class="btn btn-warning btn-lg">Join Family</button>
        </form>

        <hr>

    </div>
</div>
