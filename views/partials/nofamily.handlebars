<!-- Main Content -->
<div class="nofamilymaincontent">
    <div class="col-sm-6 col-sm-offset-3">

        <h3 class="nofamilyh3"><span class="fa fa-sign-in"></span>Add Your Family</h3>


        <!-- CREATE FAMILY FORM -->
        <form action="/api/family/create" method="post">
            <div class="form-group">
                <label>Family Name</label>
                <input type="text" class="form-control" name="famname">
            </div>
            <div class="form-group">
                <label>Secret Key</label>
                <input type="text" class="form-control" name="secretKey">
            </div>
            <div class="form-group">
                <input type="hidden" name="personId" value={{user.id}}>
            </div>
            <button type="submit" class="btn btn-warning btn-md">Add</button>
        </form>

        <hr>

    </div>

    <div class="col-sm-6 col-sm-offset-3">

        <h3 class="nofamilyh3"><span class="fa fa-sign-in"></span>Join Your Family</h3>


        <!-- CREATE JOIN FORM -->
        <form action="/api/family/join" method="post">
            <div class="form-group">
                <label>Family Name</label>
                <input type="text" class="form-control" name="famname">
            </div>
            <div class="form-group">
                <label>Secret Key</label>
                <input type="text" class="form-control" name="secretKey">
            </div>
            <div class="form-group">
                <input type="hidden" name="personId" value={{user.id}}>
            </div>
            <button type="submit" class="btn btn-warning btn-md">Join</button>
        </form>
    </div>
</div>