            <div class="modal-body">
                <!-- CREATE JOIN FORM -->
                <form action="/api/family/join" method="post">
                    <div class="form-group">
                        <label>Family Name</label>
                        <input type="text" class="form-control" name="famname">
                    </div>
                    <div class="form-group">
                        <label>Secret Key</label>
