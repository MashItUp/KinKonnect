
{{#if family}}
    <!-- If user only belongs to 1 family, take them straight to dashboard displayfamily -->
        {{#lengthEqual family 1}}
            {{> displayfamily}}
        {{else}}
            <!-- If user has more than 1 family, display multifamily to choose from -->
            {{> pickcreatefam}}
        {{/lengthEqual}}
{{else}}
    <!-- nofamily takes you to "Get Started" screen to create or join a family -->
    {{> pickcreatefam}}
{{/if}}