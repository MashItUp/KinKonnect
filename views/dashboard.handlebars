{{#if ../family}}
{{!-- they user has family --}}
    {{#if ../family.count}}

            {{#is ../family length ">" 1}}
                {{> multifamily}}
            {{else}}
                {{> displayfamily}}
            {{/is}}
    {{/if}}
{{else}}
{{!-- the user doesn't have any family.  Display nofamily.handlebars --}}
    {{> nofamily}}
{{/if}}