<!-- Background Image -->
<div class="view" id="backgroundimage" style="background-image:url(../assets/img/constellation.jpg)">

    <!-- Navigation -->
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span> Menu <i class="fa fa-bars"></i>
                </button>
            </div>
             <!-- Navbar Brand -->
            <a class="navbar-brand" href="#">Kin Konnect</a>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    {{#if user}}
                        <li>
                            <a href="/dashboard">Go to Family Dashboard</a>
                        </li>
                    {{else}}
                        <li>
                            <a href="#" data-toggle="modal" data-target="#loginModal" data-whatever="@mdo">Sign In</a>
                        </li>
                        <li>
                            <a href="#" data-toggle="modal" data-target="#registerModal" data-whatever="@mdo">Register</a>
                        </li>
                    {{/if}}
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- show any messages that come back with authentication -->
    {{#if message}}
        <div class="alert alert-danger">{{message}}</div>
    {{/if}}

    <!-- Main Content -->
    <div id="home">
        <div class="animated fadeInUp">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <h1 class="site-heading">
                        <a id="heading" href="#">Kin Konnect</a>
                    </h1>
                </div>
                <div class="col-lg-8 col-lg-offset-2" align="center">
                    <div class="aboutContent">
                        <p><b>KIN KONNECT PROVIDES A PRIVATE CHANNEL FOR YOU & FOR YOUR FAMILY TO COMMUNICATE. WE HELP YOU AVOID THE UNWANTED WONDERING EYES ON YOUR SOCIAL MEDIA FEED!</b></p> 
                        <br><p>* Not sponsored by the NSA</p>
                    </div>
                </div>
                <div class="col-md-4 col-md-offset-4">
                    <div class="subheading"><h3>Stay Connected with your Family</h3></div>
                </div>
            </div>
        </div>
    </div>
</div>


    <!-- Log In Modal -->
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="modal-title" align="center" id="loginModalLabel">Log In</h3>

                </div>
                <div class="modal-body">
                    <form action="/api/user/login" method="POST">
                        <div class="form-group">
                            <label for="username" class="form-control-label">Username</label>
                            <input type="text" class="form-control" id="username" name="email">
                        </div>
                        <div class="form-group">
                            <label for="password" class="form-control-label">Password</label>
                            <input class="form-control" type="password" id="password" name="password">
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-default center-block">Submit</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </div>
    <!-- Register Modal -->
    <div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h3 class="modal-title" align="center" id="registerModalLabel">Register</h3>
                </div>
                <div class="modal-body">
                    <form action="/api/user/signup" method="POST">
                        <div class="form-group">
                            <label for="fname" class="form-control-label">First Name</label>
                            <input type="text" class="form-control" id="fname" name="fname">
                        </div>
                        <div class="form-group">
                            <label for="lname" class="form-control-label">Last Name</label>
                            <input class="form-control" id="lname" name="lname">
                        </div>
                        <div class="form-group">
                            <label for="email" class="form-control-label">Email</label>
                            <input class="form-control" id="email" placeholder="username@domain.com" name="email">
                        </div>
                        <div class="form-group">
                            <label for="newpassword" class="form-control-label">Password</label>
                            <input class="form-control" type="password" id="newpassword" name="password">
                        </div>
                        <div class="form-group">
                            <label for="dob" class="form-control-label">Date of Birth</label>
                            <input class="form-control" type="date" id="dob" name="dob">
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-default center-block">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
